<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    					http://www.springframework.org/schema/beans/spring-beans.xsd">
    					
    <bean id="adminDao" class="com.este.dao.AdminDaoImpl" />
	<bean id="AdminService" class="com.este.services.AdminServiceImpl" >
		<property name="dao" ref="adminDao"></property>
	</bean>
    					
	<bean id="courDao" class="com.este.dao.CourDaoImpl" />
	<bean id="courService" class="com.este.services.CourServiceImpl" >
		<property name="dao" ref="courDao"></property>
	</bean>
	
	<bean id="professeurDao" class="com.este.dao.ProfesseurDaoImpl" />
	<bean id="professeurService" class="com.este.services.ProfesseurServiceImpl" >
		<property name="dao" ref="professeurDao"></property>
	</bean>

	<bean id="etudiantDao" class="com.este.dao.EtudiantDaoImpl" />		
	<bean id="etudiantService" class="com.este.services.EtudiantServiceImpl" >		
		<property name="dao" ref="etudiantDao"></property>			
	</bean>
	
	<bean id="filiereDao" class="com.este.dao.FiliereDaoImpl" />
	<bean id="filiereService" class="com.este.services.FiliereServiceImpl" >
		<property name="dao" ref="filiereDao"></property>
	</bean>
	
	<bean id="departementDao" class="com.este.dao.DepartementDaoImpl" />
	<bean id="departementService" class="com.este.services.DepartementServiceImpl" >
		<property name="dao" ref="departementDao"></property>
	</bean>
	
	
</beans>